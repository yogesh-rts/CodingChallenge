<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp">

    <ImageView
        android:id="@+id/cover_image_logo"
        android:layout_width="100dp"
        android:layout_height="130dp"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/title_text_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:fontFamily="cursive"
        android:layout_toEndOf="@id/cover_image_logo"/>


    <TextView
        android:id="@+id/story_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/title_text_card"
        android:hint="Title"
        android:textColor="@color/black"
        android:textSize="25sp"
        tools:text="Story Title"
        android:fontFamily="sans-serif-condensed-medium"/>

    <TextView
        android:id="@+id/title_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/story_title"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/cover_image_logo"
        android:text="Author Name:"
        android:fontFamily="cursive"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/story_title"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/title_author_name"
        android:textColor="@color/black"
        tools:text="Author Name"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="Author Name"/>
</RelativeLayout>